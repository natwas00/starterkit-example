<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog id="contactDialog" title="{i18n>contactDetails}">
        <VBox id="vbox1">
			<f:SimpleForm id="form1">
                <f:content>
                        <Label id="contactLabel1" text="{i18n>Name}"/>
                        <Text id="contactText1" text="{ContactName}"/>
                        <Label id="contactLabel2" text="{i18n>ContactTitle}"/>
                        <Text id="contactText2" text="{ContactTitle}"/>
                        <Label id="contactLabel3" text="{i18n>Address}"/>
                        <Text id="contactText3" text="{Address}"/>
                        <Label id="contactLabel4" text="{i18n>Phone}"/>
                        <Text id="contactText4" text="{Phone}"/>
                </f:content>
            </f:SimpleForm>
		</VBox>
    	<beginButton>
            <Button id="closeButton" type="Reject" press=".onCloseDialog" text="{i18n>Close}"/>
    	</beginButton>
    </Dialog>
</core:FragmentDefinition>